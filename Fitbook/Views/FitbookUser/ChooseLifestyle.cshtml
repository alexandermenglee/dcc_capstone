
@{
    ViewData["Title"] = "ChooseLifestyle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ChooseLifestyle</h1>

<h4>FitbookUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmitLifestyle" method="post">
            <div class="form-group">
                <input type="radio"  name="lifestyle" value="Sedentary" /> Sedentary<br />
                <input type="radio"  name="lifestyle" value="Lightly Active" /> Lightly Active<br />
                <input type="radio"  name="lifestyle" value="Moderately Active" /> Moderately Active<br />
                <input type="radio"  name="lifestyle" value="Very Active" /> Very Active<br />
                <input type="radio"  name="lifestyle" value="Extremely Active" /> Extremely Active<br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

